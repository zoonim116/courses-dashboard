{% extends "layout.twig" %}
{% block content %}
    <h1>{{ title }}</h1>
    <div class="col-sm-3 left-navigation">
        <div class="list-group">
            <a href="#" class="list-group-item active">
                {{ course.name }}
            </a>
            <a href="/" class="list-group-item">
                List of courses
            </a>
            <a href="/course/add" class="list-group-item">Add new couse</a>
            <a href="/lesson/add/{{ course.id }}" class="list-group-item">Add new lesson</a>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row">
            <table id="lessons-list" class="table table-striped" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Slides</th>
                    <th>Questions</th>
                    <th>Action</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}