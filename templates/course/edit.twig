{% extends "layout.twig" %}
{% block content %}
    <h1>{{ title }}</h1>
    <div class="col-sm-3 left-navigation">
        <div class="list-group">
            <a href="#" class="list-group-item active">{{ title }}</a>
            <a href="/" class="list-group-item ">
                List of courses
            </a>
            <a href="/course/add" class="list-group-item">Add new</a>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="row">
            <form>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="Name" value="{{ course.name }}">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" rows="3">{{ course.description }}</textarea>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        {% for category in categories %}
                            {% if category.id == course.category %}
                                <option value="{{ category.id }}" selected>{{ category.name|e }}</option>
                            {% else %}
                                <option value="{{ category.id }}" >{{ category.name|e }}</option>
                            {%  endif %}
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">File input</label>
                    <input type="file" id="exampleInputFile">
                    <p class="help-block">Example block-level help text here.</p>
                </div>
                <button type="submit" class="btn btn-info">Update</button>
            </form>
        </div>
    </div>
{% endblock %}