<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{ course.name }}">
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter some course description">{{ course.description }}</textarea>
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Author" value="{{ course.author }}">
    </div>
    <div class="form-group">
        <select name="category" class="form-control">
            {% for category in categories %}
                {% if category.id == course.category %}
                    <option value="{{ category.id }}" selected>{{ category.name|e }}</option>
                {% else %}
                    <option value="{{ category.id }}" >{{ category.name|e }}</option>
                {%  endif %}
            {% endfor %}
        </select>
    </div>
    <div class="form-group clearfix">
        <div class="">
            <a href="#" class="thumbnail update-thumbnail" data-course="{{ course.id }}">
                <img src="{{ course.img }}">
                <input type="hidden" name="img_url" value="{{ course.img }}" >
            </a>
        </div>
        <input type="file" id="course-cover" class="cover">
        <div class="progress">
            <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 1%">
                <span class="sr-only">20% Complete</span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info">Save</button>

</form>