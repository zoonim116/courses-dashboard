<form method="post">
    <div class="form-group">
        <label for="name">Text/Question:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Text/Question" value="{{ slide.txt }}">
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="above"> Above?
        </label>
    </div>
    <div class="form-group clearfix">
        <div class="">
            <a href="#" class="thumbnail update-slide-img" data-course="{{ slide.id }}">
                <img src="{{ slide.img }}">
                <input type="hidden" name="img_url" value="{{ slide.img }}" >
            </a>
        </div>
        <input type="file" id="course-cover" class="cover">
        <div class="progress">
            <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 1%">
                <span class="sr-only">20% Complete</span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="name">Answer:</label>
        <select name="answer" class="form-control">
            <option value="">Select an answer</option>
            {% for i in 1..3 %}
                {% if slide.answer == i %}
                    <option value="{{ i }}" selected>{{ i}}</option>
                {% else %}
                    <option value="{{ i }}" >{{ i}}</option>
                {%  endif %}
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="name">Option 1:</label>
        <input type="text" class="form-control" id="option_1" name="option_1" placeholder="Option " value="{{ slide.option_1 }}">
    </div>
    <div class="form-group">
        <label for="name">Option 2:</label>
        <input type="text" class="form-control" id="option_2" name="option_2" placeholder="Option " value="{{ slide.option_2 }}">
    </div>
    <div class="form-group">
        <label for="name">Option 3:</label>
        <input type="text" class="form-control" id="option_3" name="option_3" placeholder="Option " value="{{ slide.option_3 }}">
    </div>


    <button type="submit" class="btn btn-info">Save</button>

</form>